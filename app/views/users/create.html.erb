
<h2>Sign Up!</h2>

<%= form_for @user do |f| %>
     <%= f.label :name %>
     <%= f.text_field :name %><br />

     <%= f.label :email %>
     <%= f.text_field :email %><br />

     <%= f.label :password %>
     <%= f.text_field :password %><br />

     <%= f.submit "Sign Me Up!" %>
<% end %>
    <%= link_to "Back to the list!", users_path %>